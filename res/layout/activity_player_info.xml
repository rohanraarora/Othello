<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha=".6"
    android:background="@drawable/screenshot"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.othello.PlayerInfo" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/playername1"
        android:layout_alignParentLeft="true"
        android:src="@drawable/whitr" />

    <EditText
        android:id="@+id/playername1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView1"
        android:ems="10"
        android:inputType="textPersonName|textCapWords"
        android:onClick="EditNameClick"
        android:tag="name1"
        android:text="Player 1"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:src="@drawable/black" />

    <EditText
        android:id="@+id/playername2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:ems="10"
        android:inputType="textCapWords|textPersonName"
        android:onClick="EditNameClick"
        android:tag="name2"
        android:text="Player 2"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/startbutt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/url"
        android:enabled="false"
        android:onClick="game"
        android:text="Start Game"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>
